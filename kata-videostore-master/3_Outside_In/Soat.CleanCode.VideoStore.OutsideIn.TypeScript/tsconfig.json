{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES5",
    "strict": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "esnext"
    ]
  },
  "include": [
    "src/**/*"
  ]
}