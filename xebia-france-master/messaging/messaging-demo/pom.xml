   <scm>
      <connection>scm:svn:http://xebia-france.googlecode.com/svn/trunk/messaging/messaging-demo/</connection>
      <developerConnection> scm:svn:https://xebia-france.googlecode.com/svn/trunk/messaging/messaging-demo/ </developerConnection>
      <url>http://code.google.com/p/xebia-france/</url>
   </scm>
   <licenses>
      <license>
         <name>The Apache Software License, Version 2.0</name>
         <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
